<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <% details.forEach(function(user){ %>
            <form method="POST" action="/update/<%= user.id %>">
                <div class="form-group">
                    <label><b>Name</b></label>
                    <input type="text" name="name" class="form-control" placeholder="Manish" value="<%= user.name %>">
                </div>
                <div class="form-group">
                    <label><b>Email</b></label>
                    <input type="email" name="email" class="form-control" placeholder="example@gmail.com"
                        value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <label><b>Destination</b></label>
                    <input type="text" name="destination" class="form-control" placeholder="Manali/Shimla"
                        value="<%= user.destination %>">
                </div>

                <input type="submit" name="update" value="Change" class="btn btn-success">
    </div>
    </form>
    <% }) %>
        </div>
</body>

</html>